<div class="invisible sm:visible fixed px-6 md:px-12 xl:px-16 left-0 bottom-0 bg-transparent">
  <div class="flex flex-col space-y-6">
    <%= render 'shared/button_with_translate', { classes: "hover:-p-1", translate: "hover:translate-x-1" } do %>
      <%= render 'shared/github_link', { classes: "text-gray-500 hover:text-purple-700 dark:hover:text-purple-400", size: "fa-2xl" } %>
    <% end %>
    <%= render 'shared/button_with_translate', { classes: "hover:-p-1", translate: "hover:translate-x-1" } do %>
      <%= render 'shared/linkedin_link', { classes: "text-gray-500 hover:text-purple-700 dark:hover:text-purple-400", size: "fa-2xl" } %>
    <% end %>
    <%= render 'shared/button_with_translate', { classes: "hover:-p-1", translate: "hover:translate-x-1" } do %>
      <%= render 'shared/instagram_link', { classes: "text-gray-500 hover:text-purple-700 dark:hover:text-purple-400", size: "fa-2xl" } %>
    <% end %>
    <%= render 'shared/button_with_translate', { classes: "hover:-p-1", translate: "hover:translate-x-1" } do %>
      <button title="Toggle color scheme" data-action="click->nav#toggleTheme" class="hover:text-purple-700 dark:hover:text-purple-400" type=button>
        <i class="hidden dark:inline-block far fa-moon fa-2xl dark:text-purple-400"></i>
        <i class="inline-block dark:hidden far fa-sun fa-2xl text-purple-700"></i>
      </button>
    <% end %>
    <div class="mr-4 border-r border-gray-500 h-24"></div>
  </div>
</div>