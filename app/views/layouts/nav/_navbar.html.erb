<div class="background-transition color-transition bg-transparent text-black dark:text-white tracking-wider px-6 md:px-12 xl:px-16 py-2 md:py-6" style="backdrop-filter: blur(6px);">
  <div class="flex justify-between items-center mx-auto">

    <div class="text-purple-700 dark:text-purple-400 hover:text-purple-500 hover:dark:text-purple-200 transition-all ease-out duration-700">
      <%= link_to '#home' do %>
        <i class="fab fa-wolf-pack-battalion fa-4x"></i>
      <% end %>
    </div>

    <div class="flex items-center space-x-4 md:space-x-8 text-md">
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-0.5" } do %>
        <%= render 'layouts/nav/header', { label: '01.', title: 'About', route: '#about' } %>
      <% end %>
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-0.5" } do %>
        <%= render 'layouts/nav/header', { label: '02.', title: 'Experience', route: '#what-i-do' } %>
      <% end %>
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-0.5" } do %>
        <%= render 'layouts/nav/header', { label: '03.', title: 'Work', route: '#projects' } %>
      <% end %>
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-0.5" } do %>
        <%= link_to 'Contact', '#contact', class: "btn-purple-secondary dark:btn-purple px-3 py-1.5"%>
      <% end %>
    </div>

    <div>
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-0.5" } do %>
        <button title="Toggle color scheme" data-action="click->nav#toggleTheme" type=button>
          <i class="hidden dark:inline-block fas fa-moon fa-2xl dark:text-gray-200 dark:hover:text-yellow-400"></i>
          <i class="inline-block dark:hidden fas fa-sun fa-2xl text-neutral-500 hover:text-yellow-400"></i>
        </button>
      <% end %>
    </div>


  </div>
</div>