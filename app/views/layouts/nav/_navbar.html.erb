<div data-nav-target="navbar"  style="transition: padding 0.3s ease-in-out;"
     class="text-based tracking-wider px-6 sm:px-8 md:px-16 py-4 md:py-8">
  <div class="flex justify-between xl:justify-around items-center mx-auto">
    <div class="">
        <%= link_to root_path do %>
          <div class="flex space-x-1 items-center tracking-widest uppercase">
            <h2 class="font-poppins font-bold text-lg md:text-2xl">Ryan</h2>
            <h2 class="font-poppins font-bold text-lg md:text-2xl text-bg-base bg-primary py-0.5 px-1.5">Wolfe</h2>
          </div>
        <% end %>
    </div>



    <div class="flex space-x-4 lg:space-x-12">
      <div class="hidden lg:flex items-center space-x-4 text-md lg:space-x-8">
        <%= render 'layouts/nav/header', { label: '01.', title: 'About', route: about_path, delay: '100ms' } %>
        <%= render 'layouts/nav/header', { label: '02.', title: 'Blog', route: root_path(anchor: 'projects'), delay: '200ms' } %>
        <%= render 'layouts/nav/header', { label: '03.', title: 'Contact', route: contact_path, delay: '300ms' } %>
      </div>
      <button title="Toggle color scheme" data-action="click->nav#toggleTheme" type=button>
        <%= render 'layouts/nav/feather_moon' %>
        <%= render 'layouts/nav/feather_sun' %>
      </button>
      <div class="lg:hidden">
        <%= render 'layouts/nav/navbar/mobile_menu_button' %>
      </div>
    </div>


  </div>
</div>