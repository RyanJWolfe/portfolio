<div class="background-transition color-transition <%= 'animate-nav-load' if current_page? root_path %> bg-neutral-100/75 dark:bg-gray-900/75 text-black dark:text-white tracking-wider px-6 md:px-12 xl:px-16 py-2 md:py-6" style="backdrop-filter: blur(6px);">
  <div class="flex justify-between xl:justify-around items-center mx-auto">

    <div class="text-purple-700 dark:text-purple-400 hover:text-purple-500 hover:dark:text-purple-200 transition-all ease-out duration-300">
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-1" } do %>
        <%= link_to '#home' do %>
          <%= image_tag 'icons/wolf-with-moon-64.ico', class: 'h-8 md:h-12' %>
        <% end %>
      <% end %>
    </div>

    <div class="hidden md:flex items-center space-x-4 text-md md:space-x-8">
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-0.5" } do %>
        <%= render 'layouts/nav/header', { label: '01.', title: 'About', route: '#about', delay: '300ms' } %>
      <% end %>
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-0.5" } do %>
        <%= render 'layouts/nav/header', { label: '02.', title: 'Experience', route: '#what-i-do', delay: '400ms' } %>
      <% end %>
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-0.5" } do %>
        <%= render 'layouts/nav/header', { label: '03.', title: 'Projects', route: '#projects', delay: '500ms' } %>
      <% end %>
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-1" } do %>
        <%= link_to 'Contact', '#contact', class: "btn-purple-secondary animate-nav-link-load opacity-0", style: "animation-delay: calc(var(--nav-load-time) + 600ms);"%>
      <% end %>
    </div>

    <div>
      <%= render 'shared/button_with_translate', { translate: "hover:-translate-y-0.5" } do %>
        <button title="Toggle color scheme" data-action="click->nav#toggleTheme" type=button>
          <%= render 'layouts/nav/feather_moon' %>
          <%= render 'layouts/nav/feather_sun' %>
        </button>
      <% end %>
    </div>

    <%= render 'layouts/nav/navbar/mobile_menu_button' %>

  </div>
</div>